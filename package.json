{
  "name": "rift-revealer",
  "version": "1.5.4",
  "description": "Rift Revealer - League of Legends lobby analyzer",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"vite --port 5173\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "start": "npm run build && electron .",
    "rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "package": "npm run build && npm run rebuild && electron-builder build --win --publish never",
    "package:all": "npm run build && npm run rebuild && electron-builder build -mwl --publish never"
  },
  "keywords": [
    "league of legends",
    "riot games",
    "match history",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-switch": "^1.2.6",
    "axios": "^1.6.5",
    "better-sqlite3": "^9.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.24",
    "https": "^1.0.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18"
  },
  "optionalDependencies": {
    "fsevents": "2.3.3"
  },
  "build": {
    "appId": "com.riftrevealer.app",
    "productName": "RiftRevealer",
    "publish": {
      "provider": "github",
      "owner": "TrakeLean",
      "repo": "Rift-Revealer"
    },
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "logo.png",
        "to": "logo.png"
      }
    ],
    "files": [
      "src/main.js",
      "src/preload.js",
      "src/database/**/*",
      "src/api/**/*",
      "database/schema.sql",
      "dist-renderer/**/*",
      "!node_modules/fsevents",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/.cache",
      "!node_modules/**/*.{ts,map}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.flowconfig,.yarn-metadata.json,.idea,.vs,.vscode}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "logo.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "logo.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
